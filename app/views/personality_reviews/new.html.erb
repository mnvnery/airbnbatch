<div class="container">
  <div class="row justify-content-center align-items-center">
    <div class="card bg-light mb-3 rounded col-xm-12 col-5" >
      <h1 class="card-title p-3">Add a new Review</h1>
       <%= simple_form_for [ @booking, @personality_review ] do |f| %>
          <%= f.input :comment %>
          <%= f.input :rating, collection: 0..5 %>
          <%= f.button :submit, class: "btn-primary" %>
          <%= f.button :button, "Cancel", type: "reset", class: "btn btn-danger ml-2" %>
        <% end %>
    </div>
  </div>
  <div>
  <%= link_to "Go back", personalities_path, class: "btn btn-outline-primary text-center" %>
  </div>
</div>
