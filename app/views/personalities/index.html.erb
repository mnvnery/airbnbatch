<div class="container">
  <h4> My list of personalities:</h4>
  <div class="row justify-content-center align-items-center">
    <div class="card text-center col-xm-12 col-5 m-3" style="width: 18rem;">
       <%# add some photo of the personality %>
      <%# if personality.photo.attached?  %>
      <%#=  cl_image_tag personality.photo.key, width: 348, height: 124, class: "card-img-top" %>
      <%# end %>
      <% @personalities.each do |personality| %>
        <div class="card-body">
          <h5 class="card-title"><%=  link_to personality.name, personality_path(personality) %></h5>
          <img alt="Card image cap" class="card-img-top img-fluid" src="https://cdn1.newsplex.pt/fotos/2019/7/12/701042.JPG?type=Artigo" />
        </div>
      <% end %>
    </div>
  </div>
  <div>
  <%= link_to 'Add new Personality', new_personality_path, class: "btn btn-outline-primary text-center" %>
  </div>
</div>
