<div class="pb-5 m-5">
  <div class="row justify-content-center">
    <div class="card bg-light mt-3 mb-3 rounded col-xm-12 col-5">
       <h1 class="card-title p-3">Sign up</h1>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :first_name,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "" }%>
            <%= f.input :last_name,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "" }%>
            <%= f.input :location,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "" }%>
            <%= f.input :language,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "" }%>
            <%= f.input :phone,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "" }%>
            <%= f.input :birthdate,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "" }%>
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" }%>
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "btn btn-outline-primary" %>
          </div>
        <% end %>
      <div class="pl-3 pb-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
