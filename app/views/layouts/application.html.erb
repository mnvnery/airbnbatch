<!DOCTYPE html>
<html>
  <head>
    <title>AirbnBatch</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag asset_path('apple-icon-180x180.png') %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  </head>

  <body>
    <!-- NAVBAR -->
    <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
      <a class="navbar-brand" href="<%= personalities_path %>">
        <img src="/assets/airbnb-batch.png"/>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>


      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item dropdown">
            <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
            <div class="dropdown-menu dropdown-menu-right border-0" aria-labelledby="navbarDropdown" >
              <a class="dropdown-item" href="<%= bookings_path %>">Bookings</a>
              <a class="dropdown-item" href="#">Messages</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="#">Settings</a>
              <a class="dropdown-item" href="#"><strong>Sign out</strong></a>
            </div>
          </li>
        </ul>
      </div>
    </div>
    <!-- NAVBAR ENDS HERE -->
<!-- <p class="notice"><%= notice %></p>
     <p class="alert"><%= alert %></p> -->
    <%= render 'shared/flashes' %>
    <!--
    <% if user_signed_in? %>
      <p>Hello <%= current_user.email %></p>
      <% else %>
      <p>Please sign in! </p>
    <% end %>
    -->
    <%= yield %>
    <!-- FOOTER -->
    <div class="footer">
      <div class="footer-links">
        <a href="#"><i class="fab fa-github"></i></a>
        <a href="#"><i class="fab fa-instagram"></i></a>
        <a href="#"><i class="fab fa-facebook"></i></a>
        <a href="#"><i class="fab fa-twitter"></i></a>
        <a href="#"><i class="fab fa-linkedin"></i></a>
      </div>
      <div class="footer-copyright">
        Made with <i class="fas fa-heart"></i> at Le Wagon
      </div>
    </div>
    <!-- FOOTER ENDS HERE -->
  </body>
</html>
