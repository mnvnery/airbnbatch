<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <a class="navbar-brand" href="<%= personalities_path %>">
    <%= image_tag "airbnb-batch.png", alt: "alttext" %>
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item dropdown">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <%= image_tag current_user.image_url, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Add a Personality",new_personality_path, class: "dropdown-item" %>
              <%= link_to "Rentals", bookings_path, class: "dropdown-item" %>
              <%= link_to "Gigs", index_gigs_path, class: "dropdown-item" %>
              <div class="dropdown-divider"></div>
              <%= link_to "My Profile", user_path(current_user.id), class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </li>
    </ul>
  </div>
</div>

